{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: build",
            "command": "cmake",
            "args": [
                ".."
            ],
        },        
        {
            "label": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j8"
            ]
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: build",
                "make"
            ]
        },
        {
            "label": "just make",
            "dependsOrder": "sequence",
            "dependsOn": [
                "make"
            ]
        }
    ]
}